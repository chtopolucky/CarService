<Window x:Class="CarService.RequestFive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService"
        mc:Ignorable="d"
        Title="RequestFive" Height="314" Width="575">
    <Grid>
        <DataGrid x:Name="DataGridFive" HorizontalAlignment="Center" Height="220" Margin="0,10,0,0" VerticalAlignment="Top" Width="554" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Дата}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество заказов" Binding="{Binding КоличествоЗаказов}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Дата" HorizontalAlignment="Left" Margin="47,230,0,0" VerticalAlignment="Top" Height="33" Width="43"/>
        <Button Content="Показать" HorizontalAlignment="Left" Margin="366,232,0,0" VerticalAlignment="Top" Height="31" Width="144" FontSize="16" Click="show"/>
        <DatePicker x:Name="date" HorizontalAlignment="Left" Margin="120,232,0,0" VerticalAlignment="Top" Width="142" Height="31"/>
    </Grid>
</Window>
