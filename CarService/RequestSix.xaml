<Window x:Class="CarService.RequestSix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService"
        mc:Ignorable="d"
        Title="RequestSix" Height="187" Width="433" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="DataGridSix" HorizontalAlignment="Center" Height="144" Margin="0,10,0,0" VerticalAlignment="Top" Width="412" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер заказа" Binding="{Binding НомерЗаказа}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding Дата}"></DataGridTextColumn>
                <DataGridTextColumn Header="Марка автомобиля" Binding="{Binding МаркаАвтомобиля}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding СтоимостьРаботы}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
